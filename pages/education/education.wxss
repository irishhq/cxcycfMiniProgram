.tab {
  display: flex;
}

.tab-left {
  width: 5rem;
  height: 100%;
  position: fixed;
  background-color: #f2f4f7;
  font-size: 0.8rem;
}

.tab-left view{
  height: 3rem;
  line-height: 3rem;
  text-align: center;
}

.tab-left .active {
  color: #18a3a7;
  background-color: #fff;
}

.content-right {
  line-height: 160%;
  width: 15rem;
  margin-left: 5rem;
  background-color: #fff;
}

.content-wrap {
  margin: 20rpx;
}

.content-right .right-item {
  display: none;
}

.content-right .right-item.active {
  display: block;
}

