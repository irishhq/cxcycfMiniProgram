/*创业直通班，热门课程，近期活动样式*/
.course-module {
  margin-bottom: 20rpx;
}

.course-module image {
  width: 100%;
  height: 6rem;
}

.course-module .course-txt {
  padding: 20rpx;
  margin-top: -10px;
  border: 1px #f2f4f7 solid;
}

.course-module .course-title {
  font-size: 0.8rem;
  line-height: 1.2rem;
}

.course-module .course-info, .course-learn {
  font-size: 0.6rem;
  line-height: 1.0rem;
  color: #666;
}

.course-module .course-info {
  display: flex;
  justify-content: space-between;
}

/*名师风采*/
.tutor-module{
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  /*border-bottom: 1px #f2f4f7 solid;*/
}

.tutor-module view{
  text-align: center;
}

.tutor-module image{
  width: 6rem;
  height: 6rem;
  border-radius: 50%;
  border: 10px solid #f5f5f5;
}
.tutor-info{
  font-size: 0.6rem;
  line-height: 0.8rem;
  color: #999;
}
