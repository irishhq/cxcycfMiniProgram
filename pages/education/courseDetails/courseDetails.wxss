/* pages/education/courseDetails/courseDetails.wxss */

page {
  font-size: 12px;
}

video {
  width: 100%;
  height: 11rem;
}

/*切换选项部分*/

.sw-tl {
  display: flex;
  justify-content: space-between;
}

.sw-tl .tab {
  width: 50%;
  text-align: center;
  height: 44px;
  line-height: 44px;
  font-size: 16px;
  color: #333;
}

.sw-tl .cur text {
  color: #2cc17b;
  border-bottom: 3px solid #2cc17b;
  padding: 12px 20px;
}

.sw-cont {
  border-top: 1px solid #e8e9e9;
  min-height: 50px;
  margin-bottom: 48px;
}

/*简介内容*/

.coursebox {
  padding: 18px 4% 14px 4%;
}

.coursebox .name {
  font-size: 18px;
  line-height: 26px;
}

.coursebox .subtitle {
  font-size: 14px;
  line-height: 26px;
}

.coursebox .num-info {
  padding: 9px 0;
}

.coursebox .num-info text::before {
  content: "";
  background-image: url("/images/icon/course-detail-icon.png");
  background-repeat: no-repeat;
  padding-left: 16px;
  font-size: 16px;
  margin-right: 4px;
}

.fir::before {
  background-position: 0px 0px;
}

.sec::before {
  background-position: -15px 0px;
  margin-left: 10px;
}

.third::before {
  background-position: -31px 0px;
  margin-left: 10px;
}

.grep {
  color: #8891a7;
}

.detail-course .coursebox .module view {
  color: #3c4a55;
  font-size: 15px;
  font-weight: bold;
  margin-bottom: 7px;
  line-height: 21px;
}

.detail-course .coursebox .module text {
  line-height: 19px;
  padding-bottom: 15px;
}

/*end 简介内容*/

/*目录内容部分*/

.chapter {
  font-size: 15px;
}

.chapter-tl {
  padding: 16px 4%;
  background-color: #f7f9fc;
}

.ul {
  line-height: 19px;
}

.li {
  position: relative;
  box-sizing: border-box;
  margin-right: 4%;
  margin-left: 4%;
  border-bottom: 1px solid #ebeff7;
  padding: 10px 0;
  color: #333;
}

.li view {
  display: inline-block;
}

.li .befo {
  width: 14px;
  margin-right: 9px;
  font-size: 10px;
  color: #3c4a55;
  text-align: center;
  border-radius: 2px;
}

.li .befo::after {
  border-radius: 2px;
  padding: 1px;
  color: #3c4a55;
  border: 1px solid #3c4a55;
  content: "视频";
}

/*end 目录内容部分*/

.not-cur {
  display: none;
}

.start-course {
  position: fixed;
  bottom: 0;
  width: 100%;
  line-height: 48px;
  color: #fff;
  background: #2cc17b;
  font-size: 15px;
  text-align: center;
}
