/* pages/common/itemDetails/itemDetails.wxss */
/*itemDetails.wxss*/

.detail-wrap {
  margin-left: 10px;
  margin-right: 10px;
}

.detail-title {
  line-height: 38px;
  text-align: center;
  color: #ea2424;
  margin: 0 20px 0 20px;
}

.content {
  font-size: 12px;
  line-height: 24px;
  letter-spacing: 0.8px;
  margin-bottom: 10px;
}

.detail-wrap .detail-info {
  font-size: 10px;
  color: #666;
  text-shadow: 0px 1px 0px #fff;
  height: 16px;
}

.detail-info  view {
  display: inline-block;
}

.detail-wrap .detail-info image {
  width: 16px;
  height: 16px;
  vertical-align: baseline;
}

.detail-info .detail-time view,
 .detail-info .detail-src view,
 .detail-info .detail-views  view{
  display: inline;
  vertical-align: top;
  line-height: 16px;
  margin-left: 5px;
  margin-right: 20px;
}
