/* pages/common/itemList/itemList.wxss */
.item-cell {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 20rpx;
  height: 5rem;
}

.item-cell image {
  margin-right: 0.5rem;
  width: 7rem;
  height: 5rem;
}

.item-cell .item-body {
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  color: #666;
  height: 5rem;
  display: block;
  position: relative;
}

.item-title {
  font-size: 0.8rem;
  color: #4c9ddf;
  line-height: 1rem;
  height: 2rem;
  overflow: hidden;
}

.item-info {
  font-size: 0.6rem;
  height: 2.4rem;
  overflow: hidden;
  line-height: 0.8rem;
}

.item-cell .release-time {
  font-size: 0.5rem;
  float: right;
  position: absolute;
  bottom: 0;
  right: 0;
}
