<!-- pages/common/itemList/itemList.wxml -->
<!-- 列表页面 -->
<template name="itemList">
  <view url="{{url}}" class="item-cell" data-nid="{{nid}}" bindtap="toDetail">
    <view>
      <image src="{{img_url}}"></image>
    </view>
    <view class="item-body">
      <view class="item-title ell">{{title}}</view>
      <view class="item-info">{{desc}}</view>
      <view class="release-time">
        <text>{{ctime}}</text>
      </view>
    </view>
  </view>
</template>