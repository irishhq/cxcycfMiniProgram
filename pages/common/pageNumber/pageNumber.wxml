<!-- pages/common/pageNumber/pageNum.wxml -->
<template name="pageNum">
  <view class="page-wrap">
    <view class="page-nav">
      <view class="pre-page">
        <navigator url="url">上一页</navigator>
      </view>
      <view class="page-num">
        <input type="number" placeholder="" maxlength="2" auto-focus />
        <button>跳转</button>
        <view>
          共
          <text class="total-page">222</text>
          页
        </view>
      </view>
      <view class="next-page">
        <navigator url="url">下一页</navigator>
      </view>
    </view>
  </view>
</template>