/* pages/common/pageNumber/pageNum.wxss */

.page-wrap {
  font-size: 14px;
  width: 280px;
  margin: 0 auto;
}

.page-nav view {
  text-align: center;
  float: left;
  height: 27px;
  line-height: 27px;
}

.page-nav .pre-page, .page-nav .next-page {
  width: 80px;
  text-align: center;
}

.page-num {
  width: 120px;
}

.page-num input {
  border: 1px solid #f8f8f8;
  float: left;
  width: 20px;
  margin-right: 5px;
}

.page-num button {
  float: left;
  width: 40px;
  height: 27px;
  padding: 0 5px 0 5px;
  line-height: 27px;
  font-size: 10px;
}

.page-num view {
  float: right;
  height: 27px;
  line-height: 27px;
}

.page-num view .total-page {
  color: #4c9ddf;
}
