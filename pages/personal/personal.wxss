/*personal.wxss*/
.personal{
  background-color: #f2f4f7;
}
.user{
  height: 3rem;
  display: flex;
  align-items: flex-start;
  padding: 10px 0 0 20px;
  background-color: #f2f4f7;
}
.user image{
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  margin-right: 1rem;
  
}
.user view{
  line-height: 3rem;
  display: inline-block;
}

/*span*/

.span{
  background-color: #fff;
  margin-top: 10px;
  margin-bottom: 10px; 
}
.span view{
  width: 100%;
  font-size: 12px;
  line-height: 2rem;
}
.span view navigator{
  padding: 0 20px;
  color: #666;
}