/* pages/contest/contestDetails/contestDetails.wxss */
@import "/pages/index/entreBase/baseDetails/baseDetails.wxss";

.bg video {
  width: 100%;
  height: 10rem;
}

/*赛事动态，重写一部分样式*/

.contain .section-info {
  height: 40px;
}

.contain .section-info .dyna {
  padding-left: 0;
}

/*end 赛事动态*/

/*组织机构部分*/

.org-wrap .tl {
  margin-bottom: 20px;
  height: 40px;
  width: 100%;
  text-align: center;
  line-height: 40px;
}

.org-wrap .tl text {
  color: #fff;
  margin-top: 10px;
  margin-bottom: 10px;
  line-height: 20px;
  font-size: 12px;
}

.org-wrap .red {
  background-color: #c0392b;
  border-color: #c0392b;
}

.org-wrap .green {
  background-color: #27ae60;
  border-color: #27ae60;
}

.org-wrap .yellow {
  background-color: #f39c12;
  border-color: #f39c12;
}

.org-wrap .blue {
  background-color: #2980b9;
  border-color: #2980b9;
}

.org-wrap .info {
  background-color: #fff;
  border-width: 1px;
  border-style: solid;
  border-color: inherit;
  margin: -21px 0 20px 0;
  color: #666;
  font-size: 12px;
  line-height: 20px;
  padding: 5px 10px;
}

/*end组织机构*/

/*获奖项目展示,两列布局*/

.module {
  width: 100%;
}

.inner-box {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
}

.column {
  flex-basis: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.cell {
  width: 48%;
}

.cell image {
  width: 100%;
  height: 4.5rem;
}

.column .cell-txt {
  font-size: 0.8rem;
  line-height: 1rem;
}

.column .cell-txt text {
  display: block;
  margin: 0;
}

.column .cell navigator {
  position: relative;
}

.inner-box .icon-first {
  background: url("/images/icon/icon_first.png") no-repeat;
  position: absolute;
  top: 0;
  left: 0;
}

.inner-box .icon-sec {
  background: url("/images/icon/icon_second.png") no-repeat;
  position: absolute;
  top: 0;
  left: 0;
}

/*end 获奖项目展示*/
